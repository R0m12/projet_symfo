{% extends 'base.html.twig' %}

{% block title %}Maxi Mangala - Edit{% endblock %}

{% block body %}
    <style>
        .container{
            margin-top: 1.5rem;
        }
    </style>

    <div class="container">
        <h2> Modifier un auteur </h2>
        <hr>
        {{form_start(form)}}
        <div class="row">
            <div class="col-md-6">
                {{form_row(form.nom)}}
            </div>
            <div class="col-md-6">
                {{form_row(form.prenom)}}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{form_row(form.date_naissance)}}
            </div>
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}