{% extends 'base.html.twig' %}

{% block title %}Manga Review{% endblock %}

{% block body %}
    <style>
        .container{
            margin-top: 1.5rem;
        }
    </style>

    <div class="container">
        <h2> Ajouter un nouveau manga </h2>
        <hr>
        {{form_start(form)}}
        <div class="row">
            <div class="col-md-4">
                {{form_row(form.nom)}}
            </div>
            <div class="col-md-4">
                {{form_row(form.description)}}
            </div>
            <div class="col-md-4">
                {{form_row(form.statut)}}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{form_row(form.date_parution)}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{form_row(form.genre)}}
            </div>
            <div class="col-md-6">
                {{form_row(form.type)}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{form_row(form.nb_tomes)}}
            </div>
            <div class="col-md-6">
                {{form_row(form.auteur_id)}}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{form_row(form.image)}}
            </div>
        </div>
        {{form_end(form)}}
    </div>
{% endblock %}